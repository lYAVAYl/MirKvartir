@model IEnumerable<MirKvartir.Models.User>
@{
    ViewData["Title"] = "Список пользователей";
}
<h2>@ViewData["Title"]</h2>
<p>
    <a asp-controller="Home" asp-action="Create">Добавить</a>
</p>
<table class="table">
    <tr>
        <th>Имя</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UserId</td>
            <td>
                @item.Name
            </td>
            <td>
                @Html.ActionLink("Изменить", "Edit", "Home", new { item.Name })
                @Html.ActionLink("Удалить", "Delete", "Home", new { item.Name })
                @*<a asp-controller="Home" asp-action="Edit" asp-route-id="@item.Name">Изменить</a> |*@
                @*<a asp-controller="Home" asp-action="Delete" asp-route-id="@item.Name">Удалить</a>*@
            </td>
        </tr>
    }
</table>